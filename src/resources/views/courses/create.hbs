<div class="mt-4">
    <h3>Đăng Khóa Học</h3>

    <form method="POST" action="/courses/store">
            <div class="form-group">
                <label for="name">Tên Khóa Học</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="form-group">
                <label for="descreption">Mô tả Khóa Học</label>
                <input type="text" class="form-control" id="descreption" name="descreption">
            </div>
        
             <div class="form-group">
                <label for="videoId">VideoId Khóa Học</label>
                <input type="text" class="form-control" id="videoId" name="videoId">
            </div>
            <div class="form-group">
                <label for="image">Hinh anhr Khóa Học</label>
                <input type="text" class="form-control" id="image" name="image">
            </div>
             <div class="form-group">
                <label for="level">Level Khóa Học</label>
                <input type="text" class="form-control" id="level" name="level">
            </div>
          
            <button type="submit" class="btn btn-primary">Thêm Khóa Học</button>
    </form>
</div>